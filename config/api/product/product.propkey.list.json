{
    "id":"product.propkey.list",
    "name":"属性列表",
    "description":"指定类目ID或不指定来获取属性列表",
    "namespace":"Kuga\\Api\\Console",
    "method":"props.listProps",
    "accessLevel": 1,
    "request":[
        {
            "param":"catalogId",
            "required":false,
            "default":1,
            "name":"类目ID",
            "type":"Integer",
            "description":"类目ID"
        },{
            "param":"page",
            "required":false,
            "default":1,
            "name":"页码",
            "type":"Integer",
            "description":"页码"
        },
        {
            "param":"limit",
            "required":false,
            "default":10,
            "type":"Integer",
            "description":"每页显示条数",
            "name":"每页显示条数"
        }
    ],
    "response":{
        "data":{
            "type":"Object",
            "hasSampleFile":true,
            "responseItem": {
                "list":{
                    "type":"Array",
                    "responseItem":{
                        "id":{
                            "type":"Integer",
                            "sample":1,
                            "description":"属性ID"
                        },
                        "name":{
                            "type":"String",
                            "sample":"颜色",
                            "description":"属性名称"
                        },
                        "isColor":{
                            "type":"Integer",
                            "sample":0,
                            "description":"是否是颜色，值有0和1，1表示是，0表示否"
                        },
                        "isApplyCode":{
                            "type":"Integer",
                            "sample":1,
                            "description":"是否应用于编码，值有0和1，1表示是，0表示否"
                        },
                        "isSaleProp":{
                            "type":"Integer",
                            "sample":1,
                            "description":"是否是销售属性，值有0和1，1表示是，0表示否"
                        },
                        "usedForSearch":{
                            "type":"Integer",
                            "sample":1,
                            "description":"是否应用于搜索条件，值有0和1，1表示是，0表示否"
                        },
                        "formType":{
                            "type":"Integer",
                            "sample":1,
                            "description":"表单形式，1输入框，2单选，3多选，4多行输入框"
                        },
                        "sortWeight":{
                            "type":"Integer",
                            "sample":11,
                            "description":"排序权重"
                        },
                        "catalogId":{
                            "type":"Integer",
                            "sample":11,
                            "description":"类目ID"
                        },
                        "catalogName":{
                            "type":"String",
                            "sample":"服装",
                            "description":"类目名称"
                        }
                    },
                    "description":"数据列表"
                },
                "total":{
                    "type":"Integer",
                    "description":"记录总数",
                    "sample":10
                },
                "page":{
                    "type":"Integer",
                    "description":"当前页码",
                    "sample":1
                },
                "limit":{
                    "type":"Integer",
                    "description":"每页条数",
                    "sample":10
                }
            }
        }
    }
}