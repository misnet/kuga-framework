{
  "id":"product.propset.get",
  "name":"取得属性集",
  "description":"根据id取得指定的属性集",
  "namespace":"Kuga\\Api\\Console",
  "method":"props.getPropSet",
  "accessLevel": 1,
  "request":[
    {
      "param":"id",
      "required":true,
      "default":"",
      "name":"属性集ID",
      "type":"Integer",
      "description":""
    },
    {
      "param":"loadPropvalue",
      "required":false,
      "default":"0",
      "name":"是否载入属值对应的值列表",
      "type":"Integer",
      "description":""
    }
  ],
  "response":{
    "data":{
      "type":"Object",
      "responseItem": {
        "propkeyList":{
          "type":"Array",
          "responseItem":{
            "id":{
              "type":"Integer",
              "sample":1,
              "description":"ID"
            },
            "propkeyId":{
              "type":"Integer",
              "sample":"89",
              "description":"属性ID"
            },
            "isApplyCode":{
              "type":"Integer",
              "sample":"1",
              "description":"是否应用于编码,1是，0不是"
            },
            "isRequired":{
              "type":"Integer",
              "sample":"1",
              "description":"是否必填,1是，0不是"
            },
            "isSaleProp":{
              "type":"Integer",
              "sample":"1",
              "description":"是否是销售属性,1是，0不是"
            },
            "usedForSearch":{
              "type":"Integer",
              "sample":"1",
              "description":"是否应用于搜索,1是，0不是"
            },
            "disabled":{
              "type":"Integer",
              "sample":"1",
              "description":"禁用,1是，0不是"
            }
          },
          "description":"数据列表"
        },
        "name":{
          "type":"String",
          "sample":"",
          "description":"属性集名称"
        },
        "id":{
          "type":"Integer",
          "description":"属性集ID",
          "sample":1
        }
      }
    }
  }
}