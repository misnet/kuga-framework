{
    "id":"product.propvalue.list",
    "name":"属性值列表",
    "description":"指定属性ID或不指定来获取属性值列表",
    "namespace":"Kuga\\Api\\Console",
    "method":"props.listPropValues",
    "accessLevel": 1,
    "request":[
        {
            "param":"propkeyId",
            "required":false,
            "default":1,
            "name":"属性ID",
            "type":"Integer",
            "description":"属性ID"
        },{
            "param":"page",
            "required":false,
            "default":1,
            "name":"页码",
            "type":"Integer",
            "description":"页码"
        },
        {
            "param":"limit",
            "required":false,
            "default":10,
            "type":"Integer",
            "description":"每页显示条数",
            "name":"每页显示条数"
        }
    ],
    "response":{
        "data":{
            "type":"Object",
            "hasSampleFile":true,
            "responseItem": {
                "list":{
                    "type":"Array",
                    "responseItem":{
                        "id":{
                            "type":"Integer",
                            "sample":1,
                            "description":"属性值ID"
                        },
                        "propkeyId":{
                            "type":"Integer",
                            "sample":1,
                            "description":"属性ID"
                        },
                        "propkeyName":{
                            "type":"String",
                            "sample":"颜色",
                            "description":"属性名称"
                        },
                        "isColor":{
                            "type":"Integer",
                            "sample":0,
                            "description":"属性是否是颜色，值有0和1，1表示是，0表示否"
                        },
                        "propvalue":{
                            "type":"String",
                            "sample":"",
                            "description":"属性值"
                        },
                        "code":{
                            "type":"String",
                            "sample":"",
                            "description":"属性值编码"
                        },
                        "summary":{
                            "type":"String",
                            "sample":"",
                            "description":"属性值描述"
                        },
                        "sortWeight":{
                            "type":"Integer",
                            "sample":11,
                            "description":"排序权重"
                        },
                        "colorHexValue":{
                            "type":"String",
                            "sample":"000000,ffcc00,ffffff",
                            "description":"颜色值，多个以逗号分隔"
                        }
                    },
                    "description":"数据列表"
                },
                "total":{
                    "type":"Integer",
                    "description":"记录总数",
                    "sample":10
                },
                "page":{
                    "type":"Integer",
                    "description":"当前页码",
                    "sample":1
                },
                "limit":{
                    "type":"Integer",
                    "description":"每页条数",
                    "sample":10
                }
            }
        }
    }
}