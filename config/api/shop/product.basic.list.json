{
  "id":"product.basic.list",
  "name":"商品列表",
  "description":"根据条件查询商品列表",
  "namespace":"Kuga\\Api\\Console",
  "method":"product.listProducts",
  "accessLevel": 1,
  "request":[
    {
      "param":"page",
      "required":false,
      "default":1,
      "name":"页码",
      "type":"Integer",
      "description":"页码"
    },
    {
      "param":"limit",
      "required":false,
      "default":10,
      "type":"Integer",
      "description":"每页显示条数",
      "name":"每页显示条数"
    },
    {
      "param":"isOnline",
      "required":false,
      "default":-1,
      "type":"Integer",
      "description":"是否上架，-1表示上架+下架，1表示上架，0表示下架"
    }
  ],
  "response":{
    "data":{
      "type":"Object",
      "responseItem": {
        "list":{
          "type":"Array",
          "responseItem":{
            "id":{
              "type":"Integer",
              "sample":1,
              "description":"商品ID"
            },
            "title":{
              "type":"String",
              "sample":"",
              "description":"商品名称"
            },
            "sellerPoint":{
              "type":"String",
              "sample":"",
              "description":"商家卖点"
            },
            "isOnline":{
              "type":"Integer",
              "sample":1,
              "description":"是否上架"
            },
            "listingPrice":{
              "type":"Float",
              "sample":"",
              "description":"零售价"
            },
            "barcode":{
              "type":"String",
              "sample":9,
              "description":"商品货号、条码"
            },
            "originBarcode":{
              "type":"String",
              "sample":9,
              "description":"商品出厂的货号、条码"
            },
            "catalogId":{
              "type":"Integer",
              "sample":"",
              "description":"商品所在类目ID"
            },
            "prosetId":{
              "type":"Integer",
              "sample":"",
              "description":"商品属性集合"
            },
            "firstImgUrl": {
              "type":"String",
              "sample":"",
              "description":"商品封面图网址"
            },
            "catalogNamePath": {
              "type":"String",
              "sample":"服装类/女装/商务女装",
              "description":"类目路径"
            }
          },
          "description":"数据列表"
        },
        "total":{
          "type":"Integer",
          "description":"记录总数",
          "sample":10
        },
        "page":{
          "type":"Integer",
          "description":"当前页码",
          "sample":1
        },
        "limit":{
          "type":"Integer",
          "description":"每页条数",
          "sample":10
        }
      }
    }
  }
}