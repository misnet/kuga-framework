{
  "id":"inventory.items",
  "name":"库存记录",
  "description":"库存记录",
  "namespace":"Kuga\\Api\\Console",
  "method":"inventory.items",
  "accessLevel": 1,
  "request":[
    {
      "param":"storeId",
      "required":false,
      "default":"0",
      "type":"Integer",
      "description":"店仓ID"
    },
    {
      "param":"keyword",
      "required":false,
      "default":"",
      "type":"String",
      "description":"商品名称关键词"
    },
    {
      "param":"page",
      "required":false,
      "default":1,
      "name":"页码",
      "type":"Integer",
      "description":"页码"
    },
    {
      "param":"limit",
      "required":false,
      "default":10,
      "type":"Integer",
      "description":"每页显示条数",
      "name":"每页显示条数"
    }
  ],
  "response":{
    "data":{
      "type":"Object",
      "description":"单据对象",
      "list":{
        "type": "Array",
        "responseItem":{
          "id":{
            "type":"Integer",
            "sample":"",
            "description":"库存记录ID"
          },
          "firstImgUrl":{
            "type":"Integer",
            "sample":"",
            "description":"商品款号"
          },
          "barcode":{
            "type":"Integer",
            "sample":"",
            "description":"商品款号"
          },
          "title":{
            "type":"String",
            "sample":"",
            "description":"商品名称"
          },
          "storeId":{
            "type":"Integer",
            "sample":1,
            "description":"所属店仓ID"
          },
          "productId":{
            "type":"Integer",
            "sample":1,
            "description":"商品ID"
          },
          "storeName":{
            "type":"String",
            "sample":"",
            "description":"店仓名称"
          },
          "skuId":{
            "type":"Integer",
            "sample":"",
            "description":"SKU ID"
          },
          "skuSn":{
            "type":"String",
            "sample":"",
            "description":"SKU 编码"
          },
          "stockQty":{
            "type":"Integer",
            "sample":2,
            "description":"库存量"
          },
          "preinQty":{
            "type":"Integer",
            "sample":"2",
            "description":"在途入库量"
          },
          "preoutQty":{
            "type":"Integer",
            "sample":"2",
            "description":"在途出库量"
          },
          "price":{
            "type":"Float",
            "sample":0.99,
            "description":"SKU单价"
          },
          "cost":{
            "type":"Float",
            "sample":0.99,
            "description":"SKU成本"
          },
          "originalSkuId":{
            "type":"String",
            "sample":"",
            "description":"原厂SKU编号"
          },
          "skuString":{
            "type":"String",
            "sample":"颜色：红色；尺码：XL",
            "description":"SKU名称"
          },
          "skuJson":{
            "type":"String",
            "sample":"[{\"prop\":\"1\",\"value\":46},{\"prop\":\"2\",\"value\":44}]",
            "description":"SKU属性 JSON格式,prop表示属性，value表示属性值"
          }
        }
      },
      "total":{
        "type":"Integer",
        "description":"记录总数",
        "sample":10
      },
      "page":{
        "type":"Integer",
        "description":"当前页码",
        "sample":1
      },
      "limit":{
        "type":"Integer",
        "description":"每页条数",
        "sample":10
      }
    }
  }
}